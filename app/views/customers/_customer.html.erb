<tr id='<%= customer.id %>'>
  <td><%= customer.id %></td>
  <td><%= customer.name %></td>
  <td><%= customer.email %></td>
  <td><%= customer.phone %></td>
  <td><%= customer.address %></td>
  <td><%= customer.enabled? ? "Habilitado" : "Deshabilitado" %></td>
  <td><%= customer.author.name %></td>
  <td>
      <%= link_to '<i class="fa fa-edit"></i> Editar'.html_safe, edit_customer_path(customer), class: "btn btn-sm btn-primary" %>
      <%= link_to '<i class="fa fa-trash"></i> Eliminar'.html_safe, customer, method: :delete, data: { confirm: 'Estas segur@?' }, remote: true, class: "btn btn-sm btn-danger" %>
    </td>
  <td><%= link_to '<i class="fa fa-info-circle"></i> Detalles'.html_safe, customer, class: "btn btn-sm btn-info" %></td>
</tr>