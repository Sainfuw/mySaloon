<div class=" content-area">
  <div class="row mt-5">
    <div class="col-12">
      <div class="card">
        <div class="card-header ">
          <h3 class="card-title ">Listado de Clientes</h3>
          <div class="card-options">
            <%= link_to '<i class="fa fa-plus"></i> Crear Cliente'.html_safe, new_user_path, class: 'btn btn-sm btn-success' %>
          </div>
        </div>
        <div class="table-responsive">
          <table class="table table-hover card-table table-striped table-vcenter table-outline text-nowrap">
            <thead>
              <tr>
                <th scope="col"">ID</th>
                <th scope="col"">Nombre</th>
                <th scope="col"">Correo</th>
                <th scope="col"">Telefono</th>
                <th scope="col"">Estado</th>
                <th scope="col"">Creador</th>
                <th scope="col">Editar Usuario</th>
                <th scope="col">Informaci√≥n</th>
              </tr>
            </thead>
            <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td><%= customer.name %></td>
                <td><%= customer.email %></td>
                <td><%= customer.phone %></td>
                <td><%= customer.enabled? ? "Habilitado" : "Deshabilitado" %></td>
                <td><%= customer.author.name %></td>
                <td>
                    <%= link_to '<i class="fa fa-edit"></i> Editar'.html_safe, edit_customer_path(customer), class: "btn btn-sm btn-primary" %>
                    <%= link_to '<i class="fa fa-trash"></i> Eliminar'.html_safe, customer, method: :delete, data: { confirm: 'Estas segur@?' }, class: "btn btn-sm btn-danger" %>
                  </td>
                <td><%= link_to '<i class="fa fa-info-circle"></i> Detalles'.html_safe, customer, class: "btn btn-sm btn-info" %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <!-- table-responsive -->
      </div>
    </div>
  </div>
</div>