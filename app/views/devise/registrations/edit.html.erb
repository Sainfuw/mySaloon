<div class="row">
  <div class="col-12 mr-auto">
    <h1 class="text-center">Configuracion: </h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="form-group col-12">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Ingrese su Nombre...' %>
        </div>

        <div class="form-group col-12">
          <%= f.text_field :lastname, class: 'form-control', placeholder: 'Ingrese Apellido...' %>
        </div>

        <div class="form-group col-12">
          <%= f.text_field :surname, class: 'form-control', placeholder: 'Segundo Apellido...' %>
        </div>

        <div class="form-group col-12">
          <%= f.text_field :phone, class: 'form-control', placeholder: 'Ingrese su Telefono...' %>
        </div>

        <div class="form-group col-12">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Correo Electronico...' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="alert alert-warning">Esperando por confirmación de Correo: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group col-12">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Nueva Contraseña'  %>
          <p class="form-text text-muted ml-2"><small>Deja estos campos en blanco si no la quieres cambiar</small></p>
        </div>

        <div class="form-group col-12">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirmar Contraseña'  %>
        </div>

        <div class="form-group col-12 mt-3">
          <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: 'Contraseña Actual'  %>
          <p class="form-text text-muted ml-2"><small>Ingresa tu contraseña para guardar los cambios</small></p>
        </div>

        <div class="form-group col-12 mt-3">
          <%= f.submit "Guardar Cambios", class: 'btn btn-lg btn-block btn-primary' %>
        </div>
      </div>
    <% end %>

    <p class="text-center"><%= link_to "Volver Atrás", root_path %></p>
  </div>
</div>
