<tr id='<%= service.id %>'>
  <td><%= service.id %></td>
  <td><%= service.name %></td>
  <td><%= number_to_currency(service.price.to_i) %></td>
  <td><%= service.enabled? ? "Habilitado" : "Deshabilitado" %></td>
  <td><%= service.author.name %></td>
  <td>
    <%= link_to '<i class="fa fa-edit"></i> Editar'.html_safe, edit_service_path(service), class: "btn btn-sm btn-primary" if can? :update, service %>
    <%= link_to '<i class="fa fa-trash"></i> Eliminar'.html_safe, service, method: :delete, data: { confirm: 'Estas segur@?' }, remote: true, class: "btn btn-sm btn-danger" if can? :destroy, service %>
  </td>
  <td><%= link_to '<i class="fa fa-info-circle"></i> Detalles'.html_safe, service, class: "btn btn-sm btn-info" %></td>
</tr>